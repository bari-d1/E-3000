<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || "E-3000" %></title>
  <script src="https://unpkg.com/htmx.org@2.0.3"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/rotator.js" defer></script>
  <script src="/js/pw-toggle.js" defer></script>
  <script src="/js/my-rotator.js" defer></script>
  <script src="/js/layout.js" defer></script>
</head>

<body class="min-h-screen bg-gray-50 text-gray-900">
  <!-- Sticky, responsive navbar -->
  <header class="sticky top-0 z-40 bg-white/95 backdrop-blur border-b border-gray-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="h-16 flex items-center justify-between">
        <!-- Left: logo + brand -->
        <a href="/dashboard" class="flex items-center gap-3 shrink-0">
          <!-- Company logo slot -->
          <img src="/static/logo.png" alt="KC logo" class="h-16 sm:h-20 lg:h-24 w-auto" onerror="this.style.display='none'">
          <span class="text-base sm:text-lg font-semibold tracking-tight">E-3000</span>
        </a>

        <!-- Desktop nav -->
        <nav class="hidden md:flex items-center gap-6 text-sm">
          <% if (user) { %>
            <a href="/dashboard" class="hover:text-gray-700">Dashboard</a>
            <a href="/resources" class="hover:text-gray-700">Resources</a>
            <a href="/faq" class="hover:text-gray-700">FAQ</a>

            <% if (user.role === "ADMIN") { %>
              <a href="/admin" class="inline-flex items-center rounded-lg px-3 py-1.5 ring-1 ring-gray-200 hover:bg-gray-50">Admin</a>
            <% } %>
          <% } else { %>
            <a href="/faq" class="hover:text-gray-700">FAQ</a>
            <a href="/resources" class="hover:text-gray-700">Resources</a>
            <a href="/login" class="hover:text-gray-700">Login</a>
            <a href="/register" class="hover:text-gray-700">Register</a>
          <% } %>
        </nav>

        <!-- Right: user / auth -->
        <div class="hidden md:flex items-center gap-3">
          <% if (user) { %>
            <div class="flex items-center gap-3">
              <!-- Avatar fallback: first letter -->
              <div class="h-8 w-8 rounded-full bg-gray-100 ring-1 ring-gray-200 flex items-center justify-center text-xs font-semibold text-gray-600">
                <%= (user.firstName || user.name || "U").toString().slice(0,1) %>
              </div>
              <form method="post" action="/logout">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="text-sm underline underline-offset-2 hover:no-underline">Logout</button>
              </form>
            </div>
          <% } else { %>
            <a href="/login" class="rounded-full bg-blue-600 text-white px-4 py-2 text-sm font-medium hover:bg-blue-500">Sign in</a>
          <% } %>
        </div>

        <!-- Mobile: hamburger -->
        <button id="nav-toggle" class="md:hidden inline-flex items-center justify-center h-10 w-10 rounded-lg ring-1 ring-gray-200 hover:bg-gray-50" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open menu</span>
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-width="1.6" d="M4 6h16M4 12h16M4 18h16"/></svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200">
      <div class="max-w-6xl mx-auto px-4 py-3 flex flex-col gap-2 text-sm">
        <% if (user) { %>
          <a href="/dashboard" class="py-2">Dashboard</a>
          <a href="/resources" class="py-2">Resources</a>
          <a href="/sessions" class="py-2">My Sessions</a>
          <% if (user.role === "ADMIN") { %>
            <a href="/admin/sessions" class="py-2">All Sessions</a>
            <a href="/admin/flags" class="py-2">Flagged</a>
            <a href="/admin" class="py-2">Admin</a>
          <% } %>
          <form method="post" action="/logout" class="pt-2">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="underline">Logout</button>
          </form>
        <% } else { %>
          <a href="/resources" class="py-2">Resources</a>
          <a href="/login" class="py-2">Login</a>
          <a href="/register" class="py-2">Register</a>
        <% } %>
      </div>
    </div>
  </header>

  <!-- Main content container -->
  <main class="max-w-6xl mx-auto px-4 sm:px-6 py-6">
    <%- body %>
  </main>


</body>
</html>
